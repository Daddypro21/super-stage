{% extends 'base.html.twig' %}

{% block title %}admin-Dahboard{% endblock %}

{% block body %}

{% if all_user != null %}


<div class="container mt-3">
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      
      <th scope="col">Action</th>

    </tr>
  </thead>
  <tbody>
  {% for user in all_user %}
    <tr>
      <td>{{user.name}}</td>
      <td>{{user.email}}</td>
      {% if user.adminConfirm != null %}
      <td><a href="{{path('app_delete', {id:user.id})}}" class="btn btn-danger">Supprimer</a></td>
      {% else %}
      <td><a href="{{path('app_accept', {id:user.id})}}" class="btn btn-success">Accepter</a>
      <a href="{{path('app_refuse', {id:user.id})}}" class="btn btn-danger">Refuser</a>
      </td>
      {% endif %}
    </tr> 
    {% endfor %}
  </tbody>
</table>
</div>

{% else %}

<p>Aucun utilisateur inscrit</p>
{% endif %}
{% endblock %}
